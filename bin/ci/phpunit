#!/usr/bin/env bash

set -eu

readonly ROOT_DIR="$(realpath "$(dirname "$(realpath "$0")")/../..")"
source "${ROOT_DIR}"/config/docker.inc.bash

BIN_DIR=bin/ci
source "${ROOT_DIR}"/bin/dockerise.inc.bash

phpVersion=
phpunitParameters=
for arg in "${@}"; do
    if [ "${arg:0:6}" == "--php=" ]; then
        phpVersion="${arg:6}"
    else
        phpunitParameters="${phpunitParameters} ${arg}"
    fi
done

if [ "${phpVersion}" == "" ]; then
    php8.0 "${ROOT_DIR}"/bin/ci/phpunit.php "${@}"
else
    echo "PHP ${phpVersion}"

    "php${phpVersion}" \
        vendor/bin/phpunit \
            --configuration config/ci/phpunit.php-"${phpVersion}".xml \
            --colors=always \
            ${phpunitParameters}
fi
